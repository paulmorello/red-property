
<div class="home-wrapper">
  <section class="home-wrapper-left">
    <div class="home-left-search-area">

      <%= form_tag "#", method: "get" do %>
        <select name="search" id="search">
          <option value="sharehouses"> Share Houses</option>
          <option value="longterm"> Long-Term Listings</option>
        </select>
        <input class="input" type="text" name="city" value="" placeholder="Search by city">
        <button id="search-type" class="places-search">Search</button>
      <% end %>
    </div>

    <div class="home-left-listing-display">
      <% @flatmates_listings.each do |listing| %>
        <div class="home-display-card">
          <div class="home-img-card">
            <img src="<%= listing['photo-url'] %>" alt="">
          </div>
          <div class="home-content-card">
            <h2><%= listing['city'] %></h2>
            <p><%= listing['description'].first(200) %>...</p>
            <p>Bed: <%= listing['bed'] %>, Bath: <%= listing['bath'] %>, Occupants: <%= listing['occupants'] %></p>
          </div>
        </div>
      <% end %>
    </div>
  </section>

  <section class="home-wrapper-right">
    <div id="map"></div>
  </section>
</div>
